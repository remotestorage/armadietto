{
  "name": "armadietto",
  "description": "Node.js remoteStorage server",
  "homepage": "https://github.com/remotestorage/armadietto",
  "keywords": [
    "remoteStorage",
    "webfinger",
    "oauth",
    "webdav",
    "remotestorage.js",
    "my own storage",
    "privacy",
    "decentralization"
  ],
  "license": "MIT",
  "version": "0.2.0",
  "engines": {
    "node": ">=14.0"
  },
  "bin": {
    "armadietto": "./bin/armadietto.js"
  },
  "main": "./lib/armadietto.js",
  "dependencies": {
    "argparse": "^2.0.1",
    "ejs": "^3.1.7",
    "lockfile": "^1.0.4",
    "mkdirp": "^1.0.4",
    "nano": "^10.0.0",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "bdd-lazy-var": "^2.6.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-spies": "^1.0.0",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^17.0.0-0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^9.1.4",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "dev": "nodemon --inspect -w ./lib ./bin/armadietto.js -c ./bin/dev-conf.json",
    "couchdb": "./bin/armadietto-couchdb.js -c ./bin/conf-couchdb.json",
    "test": "mocha -u bdd-lazy-var/getter  spec/runner.js",
    "lint": "eslint \"lib/**/*.js\" \"bin/**/*.js\" \"spec/**/*.js\"",
    "lint:fix": "eslint --fix \"lib/**/*.js\" \"bin/**/*.js\" \"spec/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/remotestorage/armadietto.git"
  },
  "bugs": {
    "url": "https://github.com/remotestorage/armadietto/issues"
  }
}
